<%- include("header") -%>


  <body>

    <div class="box" id="heading">
      <h1> <%= listOfTitle %> </h1>
    </div>

    <div class="box">

      <% theNewItems.forEach(function(item){ %>
        <form class="" action="/delete" method="post">
          <div class="item">
            <input type="checkbox" onChange="this.form.submit()" name="deleteID" value="<%= item._id %>">
              <p><%= item.name %></p>
          </div>
        </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="on">
        <button type="submit" name="list" value = <%=listOfTitle %>>+</button>
      </form>

    </div>

  </body>


<%- include("footer") -%>
